rules:
  subject-case: [2, "always", "sentence-case"] # To look consistent in auto-generated changelog
  type-enum:
    [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "refactor",
        "revert",
        "test",
      ],
    ]
extends: ["@commitlint/config-conventional"]
helpUrl: https://docs.sunk.coreweave.com/reference/contribution-guidelines/#commit-message-format
